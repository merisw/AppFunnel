<div id="login">
  <h2>Have an account?<br>
    <small>If you signed up using Github</small>
  </h2>
    <p><%= link_to 'Sign in with Github', user_omniauth_authorize_path(:github), class: "btn btn-large btn-primary" %></p>
    <hr>

    <p>If you signed up directly, login here:</p>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <% if devise_mapping.rememberable? -%>
      <%= f.label :remember_me, class: "checkbox" do %>
        Remember me 
        <%= f.check_box :remember_me %>
      <% end %>
    <% end -%>

    <div><%= f.submit "Sign in", class: "btn btn-large btn-primary" %></div>



  

  <% end %>
</div>
